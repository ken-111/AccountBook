<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="inputViewModel"
            type="com.example.accountbook.viewmodel.InputViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/explain_category"
            android:layout_width="125dp"
            android:layout_height="58dp"
            android:layout_marginBottom="396dp"
            android:gravity="center"
            android:text="@{inputViewModel.categoryText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/category_spinner"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/explain_money"
            android:layout_width="125dp"
            android:layout_height="58dp"
            android:layout_marginTop="128dp"
            android:gravity="center"
            android:text="@{inputViewModel.moneyText}"
            app:layout_constraintEnd_toStartOf="@+id/input_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/input_money"
            android:layout_width="161dp"
            android:layout_height="58dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:text="@={inputViewModel.money}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.82"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.186" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="180dp"
            android:layout_height="58dp"
            android:layout_marginBottom="384dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:setOnItemSelectedListener="@{inputViewModel.clicksListener}"
            android:entries="@array/spinner_values"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_money"
            app:layout_constraintVertical_bias="0.811" />

        <Button
            android:id="@+id/input_button"
            android:layout_width="201dp"
            android:layout_height="70dp"
            android:backgroundTint="#47ffa9"
            android:textSize="20sp"
            android:onClick="@{() -> inputViewModel.insertAccount()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{inputViewModel.buttonText}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.626" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>